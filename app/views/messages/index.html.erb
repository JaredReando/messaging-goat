<p id="notice"><%= notice %></p>

<h1>Inbox</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>Read?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inbox_messages.each do |message| %>
      <tr>
        <td><%= User.find(message.from_user.to_i).name %></td>
        <td><%= status = message.read == true ? 'read' : 'unread' %></td>
        <td><%= link_to 'Show', message, :read =>'true' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Sent</h1>

<table>
  <thead>
    <tr>
      <th>To</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sent_messages.each do |message| %>
      <tr>
        <td><%= User.find(message.to_user.to_i).email %></td>
        <td><%= message.body %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', "../../users/#{current_user.id}/messages/new" %>
